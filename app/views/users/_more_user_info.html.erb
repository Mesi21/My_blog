<div class="user-details container fluid d-flex flex-row">
  <img src='<%= @user.photo %>' class="card-img-top rounded" alt="walk">
  <div class="card-body d-flex flex-column">
    <h3 class="card-title"><%= @user.name %></h3>
    <p class="card-text text-end"><small class="text-body-secondary">Number of posts: <%= @user.posts_counter %></small></p>
  </div>
</div>
<div class="card-body">
  <h5><strong>Bio</strong>:</h5>
  <p><%= @user.bio %></p>
</div>
